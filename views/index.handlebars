<div class="container">
    <!-- Row #1. -->
    <div class="row text-center">
        <div class="panel panel-primary col-sm-12">
            <!-- Embedded Web Page section. -->
            <div id="embed-page">
                <div class="panel panel-primary">
                    <div class="panel-heading" id="override">
                        <h3>Trending Travel Stories</h3>
                    </div>
                    <div class="panel-body">
                        <!-- Embedded website displays here. -->
                        <iframe height="300px" width="100%" src="https://www.boredpanda.com/category/travel/" name="iframe_a"></iframe>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <br>

    <!-- Row #2. -->
    <div class="row text-center">

        <div class="col-sm-8" id="embed">

            <!-- News Panel. -->
            <div class="panel-body" id="articles">
                <!-- Appended here. Handlebars... -->
                {{#each articles}}

                <p data-id="{{this._id}}"> {{this.title}}
                    <br> {{this.link}}
                </p>

                {{/each}}
            </div>

        </div>

        <!-- Comments section. -->
        <div class="col-sm-4" id="">
            <div id="comment-input">
                <!-- Comment input fields display here. Handlebars... **replaces the append fields on scrape-front. -->
                <h3>Comment on this article:
                    <br> {{this.title}} </h3>
                <br>
                <h4>Your Name:
                    <br>
                    <br>
                    <input id='nameinput' name='name'>
                </h4>
                <br>
                <br>
                <h4>Add a Comment:
                    <br>
                    <br>
                    <textarea id='bodyinput' name='body'></textarea>
                </h4>
                <br>
                <br>
                <br>
                <button class="btn btn-default" id="savenote" data-id="{{this._id}}">Submit</button>

            </div>

            <div id="savednotes">
                <!-- Saved comments display here. Handlebars... -->

            </div>
        </div>
    </div>
</div>

<!-- Row #3 Footer. -->
<div class="row footer text-center">
    <div class="row">
        <div class="col-sm-12" id="footer">
            <!-- Footer text here. -->
            <h4>All news stories that appear are provided by and property of The Bored Panda.</h4>
        </div>
    </div>

</div>
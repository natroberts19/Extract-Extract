<div class="container">
    <div class="jumbtron text-center">
        <h1>EXTRAct! EXTRAact!</h1>
        <h2>Read all the latest Buffalo Bills news right here!</h2>
    </div>
    <br>
    <!-- Row #1. -->
    <div class="row text-center">
        <div class="panel panel-primary col-sm-12" id="articles">
            <!-- News Panel. -->
            <div class="panel-body">
                <!-- Appended articles display here. Handlebars... Also have to refer to the iframe target (ex. <a href="link" target="iframe_a">)-->
                <ul>
                    <li>
                        {{#each reservation}} {{> tables/reservation-block}} {{/each}}
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <br>
    <!-- Row #2. -->
    <div class="row text-center">
        <!-- Embedded Web Page section. -->
        <div class="col-sm-6" id="embed">
            <div id="embed-page">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Trending Bills News</h3>
                    </div>
                    <div class="panel-body">
                        <!-- Embedded website displays here. -->
                        <iframe height="600px" width="100%" src="https://www.buffalobills.com/news/index.html" name="iframe_a"></iframe>
                    </div>
                </div>
            </div>
        </div>

        <!-- Comments section. -->
        <div class="col-sm-6" id="comments">
            <h1>Comments</h1>
            <div id="comment-input">
                <p>Name</p>
                <!-- Type in name. -->
                <input type="text" id="name" />
                <br>
                <p>Comment</p>
                <textarea id="comment">
                    <!-- Type in comment. -->
                </textarea>
                <div id="buttons">
                    <div id="actionbutton">
                        <!-- Submit comment. -->
                        <button class="btn btn-default" id="makenew">Submit</button>
                    </div>
                </div>
            </div>

            <div id="results">
                <!-- Appended comments display here. Handlebars... -->
                {{#each reservation}} {{> tables/reservation-block}} {{/each}}
            </div>
        </div>
    </div>
</div>

<!-- Footer. -->
<div class="row footer text-center">
    <div class="row">
        <div class="col-sm-12" id="footer">
            <!-- Footer text here. -->
            <p>All news stories that appear are provided by, and property of, the Buffalo Bills and buffalobills.com</p>
        </div>
    </div>

</div>